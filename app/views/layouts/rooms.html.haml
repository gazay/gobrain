!!!
%html{ html_attrs('en') }
  %head
    %title Preved
    %meta{ 'http-equiv' => 'content-type', :content => 'text/html; charset=utf-8' }
    %link{ :rel => 'shortcut icon', :href => '/favicon.ico', :type => 'image/x-icon' }
    = stylesheet_link_tag 'application'
    = javascript_include_token
    = javascript_include_tag 'jquery', 'jquery/json', 'jquery/cookie', 'juggernaut/juggernaut', 'juggernaut/jquerynaut', 'juggernaut/swfobject', 'application'
    = juggernaut :channels => [@room.permalink], :client_id => @user.id
  %body
    = yield
